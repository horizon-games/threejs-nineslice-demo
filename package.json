{
  "name": "threejs-nineslice-demo",
  "version": "0.0.0",
  "license": "MIT",
  "private": false,
  "description": "Only One",
  "repository": "https://github.com/horizon-games/threejs-nineslice-demo",
  "scripts": {
    "start": "yarn dev",
    "dev": "webpack-dev-server --mode development --progress --color --config config/webpack/webpack.config.local.js",
    "dist": "yarn dist:clean && yarn dist:build",
    "dist:clean": "rm -rf ./dist",
    "dist:build": "webpack --verbose --mode production --color --config config/webpack/webpack.config.dist.js",
    "dist:dev": "yarn dist:clean && yarn dist:dev:build",
    "dist:dev:build": "webpack --verbose --mode development --color --config config/webpack/webpack.config.dist.js",
    "lint": "yarn run lint:tslint && yarn run lint:prettier",
    "lint:fix": "yarn run lint:fixtslint && yarn run lint:fixprettier",
    "lint:tslint": "tslint -c tslint.json $(find src -type f -name *.ts -o -name *.tsx)",
    "lint:prettier": "prettier-check --config ./.prettierrc $(find src -type f -name *.ts -o -name *.tsx)",
    "lint:fixprettier": "prettier --config ./.prettierrc --write $(find src -type f -name *.ts -o -name *.tsx)",
    "lint:fixtslint": "tslint -c tslint.json --fix $(find src -type f -name *.ts -o -name *.tsx)"
  },
  "dependencies": {
    "@types/offscreencanvas": "^2019.6.0",
    "@types/webgl2": "^0.0.5",
    "three": "^0.137.0"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.4",
    "dotenv": "^6.1.0",
    "fork-ts-checker-webpack-plugin": "^1.3.7",
    "glslify-import-loader": "^0.1.2",
    "glslify-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "prettier": "^1.14.3",
    "prettier-check": "^2.0.0",
    "raw-loader": "^1.0.0",
    "serve": "^10.0.0",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^1.1.0",
    "ts-loader": "^5.3.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-language-service": "^0.9.9",
    "tslint-lines-between-class-members": "^1.3.3",
    "typescript": "3.3.3333",
    "typescript-styled-plugin": "^0.13.0",
    "webpack": "^4.30.0",
    "webpack-assets-by-type-plugin": "^0.1.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.9"
  }
}
